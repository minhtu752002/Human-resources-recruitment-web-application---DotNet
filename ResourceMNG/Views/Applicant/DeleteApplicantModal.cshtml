@{
}
@model ResourceEntity.Models.Applicant

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="card card-header text-center ">
                    <h4>
                        Bạn có muốn xóa
                    </h4>
                    <p class="mb-0 text-danger font-weight-bold">
                        Hành động không thể hoàn tác !!!
                    </p>

                </div>
                <div class="modal-body">
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th scope="row">Tên ứng cử viên:</th>
                                    <td> @Model.ApplicantName</td>

                                </tr>
                                <tr>
                                    <th scope="row">Ngày sinh:</th>
                                    <td> @Model.ApplicantDob?.ToString("dd/MM/yyyy") </td>

                                </tr>
                                <tr>
                                    <th scope="row">Giới tính:</th>
                                    <td> @Model.Gender </td>

                                </tr>
                                <tr>
                                    <th scope="row">Nơi sinh:</th>
                                    <td> @Model.ApplicantPob </td>

                                </tr>
                                <tr>
                                    <th scope="row">Địa chỉ:</th>
                                    <td>@Model.ApplicantAddress</td>

                                </tr>
                               
                            </tbody>
                        </table>
                    </div>
                    <form asp-action="DeleteModalComfirm" method="post" class="text-center">
                        <input type="hidden" asp-for="ApplicantId" />
                        <input type="submit" value="Xóa" class="btn btn-danger" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>