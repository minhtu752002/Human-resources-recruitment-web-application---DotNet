@using ResourceEntity.Models;
@model ResourceEntity.Models.User

@{
    var rolesUser = ViewBag.RolesUser as List<RoleDesc>;
    var roleIDUser = rolesUser?.Select(a => a.Id).ToList();
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            
                    <h4> Cấp quyền cho User: <span class="text-info"> @Model?.Fullname</span></h4>
        </div>
        <div class="card-body">
            <form asp-action="CapQuyenUser" asp-controller="Account" method="post">
                <input type="hidden" asp-for="Id" />
                @foreach (var rd in ViewBag.RoleDesc)
                {
                    <div class="form-check form-check-flat" style="border-bottom:1px solid">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" name="selectedRoles" value="@rd.Id" @(roleIDUser?.Contains(rd.Id) ? "checked" : "")> @rd.Title
                            <i class="input-helper"></i>
                        </label>
                    </div>
                }
            <div class="text-center">
                <button  type="submit" class="btn btn-success">Lưu</button>
                <a asp-action="Index" class="btn btn-light">Quay lại</a>
            </div>
            </form>
       </div>
       </div>
       </div>
