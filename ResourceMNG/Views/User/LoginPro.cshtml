
@model ResourceEntity.Models.User

@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/assets/templatePro/assets/vendors/iconfonts/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/templatePro/assets/vendors/iconfonts/ionicons/dist/css/ionicons.css">
    <link rel="stylesheet" href="~/assets/templatePro/assets/vendors/iconfonts/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/assets/templatePro/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/assets/templatePro/assets/vendors/css/vendor.bundle.addons.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/assets/templatePro/assets/css/shared/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/assets/templatePro/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth auth-bg-1 theme-one">
                
                <div class="row w-100">
                    <div class="col-lg-4 mx-auto">
                        <div class="auto-form-wrapper">
                            <div class="text-center mb-3">

                        <img src="~/images/logo.png" />
                            </div>
                            <form asp-action="Login">
                                <div class="form-group">
                                    <label asp-for="Username" class="label">Username</label>
                                    <div class="input-group">
                                        <input asp-for="Username" type="text" class="form-control" placeholder="Username">
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="mdi mdi-check-circle-outline"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="label">Password</label>
                                    <div class="input-group">
                                        <input asp-for="Password" type="password" class="form-control" placeholder="*********">
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="mdi mdi-check-circle-outline"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <p class="text-danger text-xs text-center">@ViewBag.Message</p>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary submit-btn btn-block">Login</button>
                                </div>
                                
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/assets/templatePro/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/templatePro/assets/vendors/js/vendor.bundle.addons.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
   @* <script src="~/assets/templatePro/assets/js/shared/off-canvas.js"></script>
    <script src="~/assets/templatePro/assets/js/shared/misc.js"></script>*@
    <!-- endinject -->
    @* <script src="~/assets/templatePro/assets/js/shared/jquery.cookie.js" type="text/javascript"></script> *@
</body>
</html>